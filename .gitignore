# 在.gitignore末尾添加大文件排除规则
echo "" >> .gitignore
echo "# Large files and datasets" >> .gitignore
echo "*.bin" >> .gitignore
echo "*.h5" >> .gitignore
echo "*.pkl" >> .gitignore
echo "*.pt" >> .gitignore
echo "*.pth" >> .gitignore
echo "*.ckpt" >> .gitignore
echo "*.safetensors" >> .gitignore
echo "*.wav" >> .gitignore
echo "*.mp3" >> .gitignore
echo "*.mp4" >> .gitignore
